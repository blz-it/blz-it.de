---
interface Action {
  label: string;
  url: string;
}
export interface Props {
  title: string;
  subtitle?: string | null;
  action?: Action;
}

const { title, subtitle, action } = Astro.props;
---

<div
  class="overflow-hidden bg-wsi-blue-300 px-6 py-20 text-center shadow-2xl sm:rounded-3xl sm:px-16"
>
  <h2
    class="mx-auto max-w-2xl text-2xl sm:text-3xl md:text-4xl font-bold tracking-tight text-white"
  >
    {title}
  </h2>
  {
    subtitle && (
      <p class="mx-auto mt-6 max-w-4xl text-lg leading-8 text-gray-300">
        {subtitle}
      </p>
    )
  }
  {
    action && (
      <div class="mt-16">
        <a
          href={action.url}
          class="rounded-md bg-white px-12 py-3 text-base sm:text-lg font-semibold leading-7 text-wsi-blue-300 shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
        >
          {action.label}
        </a>
      </div>
    )
  }
</div>
