---
import { Icon } from "astro-icon";
import { t } from "i18next";
import { buildLink } from "../routing/buildLink";

interface Social {
  name: string;
  href: string;
  icon: string;
}
const socials: Social[] = [
  {
    name: "YouTube",
    href: "https://youtube.de/@GermanITSkills",
    icon: "bi:youtube",
  },
  {
    name: "Instagram",
    href: "https://instagram.com/german.it.skills",
    icon: "mdi:instagram",
  },
  {
    name: "Facebook",
    href: "https://facebook.com/GermanITSkills",
    icon: "ic:baseline-facebook",
  },
];
---

<footer class="bg-gray-800">
  <div class="mx-auto max-w-7xl px-6 py-12 lg:px-8">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <img
        class="h-36 -ml-6 xl:ml-0"
        src="/imgs/wsg/wsg_horizontal.svg"
        alt=""
      />
      <div
        class="mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap xl:col-span-2 xl:mt-0"
      >
        <div>
          <h3 class="text-sm font-semibold leading-6 text-white">
            WorldSkills International
          </h3>
          <ul role="list" class="mt-6 space-y-4">
            <li>
              <a
                href="https://worldskills.org"
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm leading-6 text-gray-300 hover:text-white"
                >{t("layout.footer.website")}</a
              >
            </li>
          </ul>
        </div>
        <div class="mt-10 md:mt-0">
          <h3 class="text-sm font-semibold leading-6 text-white">
            WorldSkills Germany
          </h3>
          <ul role="list" class="mt-6 space-y-4">
            <li>
              <a
                href="https://www.worldskillsgermany.com"
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm leading-6 text-gray-300 hover:text-white"
              >
                {t("layout.footer.website")}
              </a>
            </li>
            <li>
              <a
                href="https://www.worldskillsgermany.com/de/verein/ansprechpartner"
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm leading-6 text-gray-300 hover:text-white"
              >
                {t("layout.footer.contact")}
              </a>
            </li>
          </ul>
        </div>
        <div class="mt-10 md:mt-0">
          <h3 class="text-sm font-semibold leading-6 text-white">
            {t("layout.footer.legal")}
          </h3>
          <ul role="list" class="mt-6 space-y-4">
            <li>
              <a
                href={buildLink("/imprint")}
                class="text-sm leading-6 text-gray-300 hover:text-white"
                >{t("layout.footer.imprint")}</a
              >
            </li>
            <li>
              <a
                href={buildLink("/privacy")}
                class="text-sm leading-6 text-gray-300 hover:text-white"
                >{t("layout.footer.privacy")}</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div
      class="mt-8 border-t border-white/10 pt-8 md:flex md:items-center md:justify-between"
    >
      <div class="flex justify-center space-x-6 md:order-2">
        {
          socials.map((it) => (
            <a
              href={it.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-gray-300"
            >
              <span class="sr-only">{it.name}</span>
              <Icon name={it.icon} class="h-6 w-6" />
            </a>
          ))
        }
      </div>
      <div class="mt-8 md:order-1 md:mt-0">
        <p class="text-center text-base text-gray-400">
          &copy; 2024 BLZ IT. {t("layout.footer.allRightsReserved")}.
        </p>
      </div>
    </div>
  </div>
</footer>
