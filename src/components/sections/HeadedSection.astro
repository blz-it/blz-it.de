---
interface Props {
  title?: string;
  subtitle?: string;
  bgColor?: string;
  color?: string;
}

const { title, subtitle, bgColor = "white", color = "black" } = Astro.props;
---

<div class="headed-section">
  <div
    class="mx-auto max-w-7xl px-4 py-12 text-center sm:px-6 lg:px-8 lg:pb-24 lg:pt-12"
  >
    <div class="space-y-12">
      <div class="space-y-5 sm:mx-auto sm:max-w-xl sm:space-y-4 lg:max-w-5xl">
        {
          title && (
            <h2 class="text-2xl font-bold tracking-tight sm:text-3xl md:text-4xl">
              {title}
            </h2>
          )
        }
        {subtitle && <p class="text-gray-500 lg:text-xl">{subtitle}</p>}
      </div>
      <slot />
    </div>
  </div>
</div>

<style define:vars={{ bgColor, color }}>
  .headed-section {
    background-color: var(--bgColor);
    color: var(--color);
  }
</style>
