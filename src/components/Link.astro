---
import { classNames } from "../utils/classNames";

export interface Props {
  href: string;
  class?: string;
}

const props = Astro.props;
---

<a
  {...props}
  class={classNames(
    props.class,
    "pb-0.5",
    "text-accent-500 active:text-accent-400",
    "bg-gradient-to-r from-accent-500 to-accent-600 active:from-accent-400 active:to-accent-600",
    "bg-left-bottom bg-[size:0%_2px] bg-no-repeat",
    "[transition:_background-size_0.3s,_background-position_0s_0.3s]",
    "[&:hover]:bg-right-bottom [&:hover]:bg-[size:100%_2px]"
  )}
  ><slot />
</a>
