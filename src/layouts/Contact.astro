---
import { t } from "i18next";
import { colors } from "../constants/colors";
import { Trans } from "react-i18next";

export interface Props {
  contact: string;
}

const bgColor = colors.brandBlue;
const textColor = colors.onBrandBlue;

const { contact } = Astro.props;
---

<div class="ml-auto mr-32 mt-16 w-min">
  <a class="bg-button px-6 py-2 rounded-lg" href={contact}>
    {t("skills.contact")}
  </a>
</div>

<style define:vars={{ bgColor, textColor }}>
  .bg-button {
    background-color: var(--bgColor);
    color: var(--textColor);
  }
</style>
