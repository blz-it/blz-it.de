---
export interface Props {
  title: string;
  subtitle?: string | null;
  bgColor?: string;
  color?: string;
}

const { title, subtitle, bgColor = "white", color = "black" } = Astro.props;
---

<div class="headed-section">
  <div
    class="mx-auto max-w-7xl py-12 px-4 text-center sm:px-6 lg:px-8 lg:py-24"
  >
    <div class="space-y-12">
      <div class="space-y-5 sm:mx-auto sm:max-w-xl sm:space-y-4 lg:max-w-5xl">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">
          {title}
        </h2>
        {subtitle && <p class="text-xl text-gray-500">{subtitle}</p>}
      </div>
      <slot />
    </div>
  </div>
</div>

<style define:vars={{ bgColor, color }}>
  .headed-section {
    background-color: var(--bgColor);
    color: var(--color);
  }
</style>
